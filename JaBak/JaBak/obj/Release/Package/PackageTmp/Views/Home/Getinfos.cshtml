
@{
    ViewBag.Title = "Getinfos";
}


<head>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="/Pict/JaBak.jpg" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
  
</head>

<body>

<br/>

<div class="container">

    @if (Model != null)
    {
        <table class="table table-light table-hover table-active table-bordered table-striped">
            <thead>
                @{ var i = 1;}
                <tr>
                    <th>Numéro</th>
                    @foreach (System.Data.DataColumn col in Model.Columns)
                    {
                        <th>@col.Caption</th>
                    }
                </tr>
            </thead>
            <tbody>
            
            @foreach (System.Data.DataRow row in Model.Rows)
            {
                <tr>
                    <td>@i</td>
                    @{ i++;}
                    @foreach (var cell in row.ItemArray)
                    {
                        if (cell != null)
                        {
                            <td>@cell.ToString()</td>
                        }
                        else
                        {
                            <td></td>
                        }
                    }
                </tr>
            }

            </tbody>
        </table>
    }

</div>
</body>