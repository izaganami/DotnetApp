@{
    ViewBag.Title = "Home Page";
}

<head>

    <style>
        #h1 {
            color: dimgray;
            font-family: "Great Vibes", cursive;
            font-size: 125px;
            line-height: 160px;
            font-weight: normal;
            margin-bottom: 40px;
            margin-top: 40px;
            text-align: center;
            text-shadow: 0 1px 1px #fff;
            position: fixed;
        }
        .carousel .item
        {
            width: 100%;
        }
        .carousel .slide
        {
            width:100%;
        }
        .carousel .item img
        {
            width: 100%;
        }
        .container
        {
            margin: 0;
            width: 100%;
        }
        #thisc
        {
            width: 100%;
        }
        .carousel-inner
        {
            max-height: 900px;
        }
        .carousel-item {
            max-height: 900px;
        }
        div img{width: 100%;}
        


    </style>

</head>


<div id="demo" class="carousel slide" data-ride="carousel"  style="padding-top: 0px;width: 100%;height: 900px">

    <ol class="carousel-indicators">
